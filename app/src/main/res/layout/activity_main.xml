<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="inputFruit"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">

        <TextView
            android:id="@+id/tv_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="@string/fruit_registration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:weightSum="1"
            app:layout_constraintTop_toBottomOf="@+id/tv_input_title">

            <EditText
                android:id="@+id/et_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:hint="@string/fruit_name_input" />

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:padding="20dp"
                android:text="출력"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_output_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="@string/registered_fruit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_text_input" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{inputFruit}"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:gravity="start"
            tools:text="@string/fruit_name_input"
            app:layout_constraintStart_toEndOf="@+id/tv_output_title"
            app:layout_constraintTop_toBottomOf="@+id/ll_text_input" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>